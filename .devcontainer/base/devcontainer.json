{
  "name": "LaTeX (Standard)",
  "build": {
    "dockerfile": "../Dockerfile", // Points to the shared Dockerfile
    "context": "../.." // The build context is the root of the project
  },
  "customizations": {
    "vscode": {
      // Only project-critical extensions are installed
      "extensions": ["james-yu.latex-workshop"],
      // No Vim settings are included
      "settings": {
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              "-outdir=%WORKSPACE_FOLDER%/output",
              "-auxdir=%WORKSPACE_FOLDER%/output",
              "%DOC%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "latexmk",
            "tools": ["latexmk"]
          }
        ]
      }
    }
  }
}