{
  "name": "LaTeX (Vim)",
  "build": {
    "dockerfile": "Dockerfile" // Points to the shared Dockerfile
  },
  "customizations": {
    "vscode": {
      "extensions": ["james-yu.latex-workshop", "vscodevim.vim"],
      "settings": {
        // Your personal Vim settings are included here as per your request
        "vim.relativenumber": true,
        "vim.easymotion": true,
        "vim.incsearch": true,
        "vim.useSystemClipboard": true,
        "vim.useCtrlKeys": true,
        "vim.hlsearch": true,
        "vim.insertModeKeyBindings": [
          {
            "before": ["j", "k"],
            "after": ["<Esc>"]
          }
        ],
        "vim.normalModeKeyBindingsNonRecursive": [
          {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
          },
          {
            "before": ["<C-n>"],
            "commands": [":nohl"]
          }
        ],
        "vim.leader": "<space>",
        "vim.handleKeys": {
          "<C-a>": false,
          "<C-f>": false
        },
        "editor.lineNumbers": "relative",

        // --- LaTeX Workshop Configuration ---
        "latex-workshop.latex.tools": [
          {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              // Use an absolute path to the workspace's output folder
              "-outdir=%WORKSPACE_FOLDER%/output",
              // âœ… FIX: Explicitly set the auxiliary directory to the same place
              "-auxdir=%WORKSPACE_FOLDER%/output",
              "%DOC%"
            ]
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "latexmk",
            "tools": ["latexmk"]
          }
        ]
      }
    }
  }
}
